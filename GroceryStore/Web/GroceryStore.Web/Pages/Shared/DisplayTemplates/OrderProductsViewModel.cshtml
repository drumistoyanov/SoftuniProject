@model GroceryStore.Common.ViewModels.Orders.OrderProductsViewModel

<div class="list-group">
    <div class="list-group-item">
        <div class="media">
            <div class="media-body align-self-center">
                <img class="@Model.ProductPicture" height="127" src="@Model.ProductPicture"
                     width="227" alt="Generic placeholder image">
            </div>
            <div class="media-body align-self-center">
                <h4 class="mb-1"> @Model.ProductName </h4>
            </div>
            <div class="media-body align-self-center">
                <h4 class="mb-1">Price: @Model.ProductPrice &euro; </h4>
            </div>
            <div class="media-body align-self-center">
                <h4 class="mb-1">Weight: @Model.ProductWeight</h4>
            </div>
            <div class="media-body align-self-center">
                <h4 class="mb-1">Quantity: @Model.Quantity</h4>
            </div>
        </div>
    </div>
</div>