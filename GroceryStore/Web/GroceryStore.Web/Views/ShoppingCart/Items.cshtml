@model List<GroceryStore.Common.ViewModels.ShoppingCart.ProductCartViewModel>
@{
    ViewData["Title"] = "Items";
}

<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h1 class="display-3">Your Cart</h1>
                </div>
                <br />
                @Html.DisplayForModel()
                <br />
                <div class="col-8 ml-auto mr-auto mt-5 text-center">
                    <h1><strong>Total Price - @Model.Sum(x => x.Price*x.Quantity)</strong> &euro;</h1>
                </div>
                @if (Model.Count > 0)
                {
                    <div class="col-8  ml-auto mr-auto my-3">
                        <form method="post" action="FinishOrder">
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-success btn-lg btn-block" value="Order" />
                        </form>
                    </div>
                }
                <br />
            </div>
        </div>
    </div>
</main>

