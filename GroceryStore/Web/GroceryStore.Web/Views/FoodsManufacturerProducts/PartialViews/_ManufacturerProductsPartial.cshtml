@model ManufacturerProductsViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <h3>Filter By</h3>
            @await Html.PartialAsync("_ManufacturersDropdownMenuPartial", Model.Manufacturers,
                new ViewDataDictionary(ViewData) {
                    {
                        "ControllerName", "FoodsManufacturerProducts"
                    } } )
        </div>
        <div class="col-sm-10">
            <h3>
                @Model.ManufacturerWithProducts.Name Foods
            <img src="@Model.ManufacturerWithProducts.LogoUrl" alt="@Model.ManufacturerWithProducts.Name" width="100" height="100" />
        </h3>
        <hr />
        @await Html.PartialAsync("_SortDropdownMenuPartial", Model.Page)
        <hr />
        @await Html.PartialAsync("_ProductsViewPartial", Model.ManufacturerWithProducts.Products)
        <br />
        @await Html.PartialAsync("_NavManufacturerDetailsPartial", Model.Page)
        </div>
    </div>
</div>
