@model TypesProductsViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <h3>Filter By</h3>
            @await Html.PartialAsync("_ManufacturersDropdownMenuPartial", Model.Manufacturers,
           new ViewDataDictionary(this.ViewData) {
              {
                  "ControllerName", $"{Model.Kind}ManufacturerProducts"
              } } )

            <br />
            <br />
            <div>Types </div>
            <hr />

            <form method="post" asp-controller="@Model.Kind" asp-action="SelectType">
                @await Html.PartialAsync("_TypesCheckBoxPartial", Model.Types)
            </form>
            <hr />
        </div>
        <div class="col-sm-10">
            <h3>Grocery Store @Model.Kind's</h3>
            <hr />
            @await Html.PartialAsync("./_TypesSortDropdownMenuPartial.cshtml", Model)
            <hr />
            @await Html.PartialAsync("_ProductsViewPartial", Model.Products)
            <br />
            @await Html.PartialAsync("./_NavTypesPartial.cshtml", Model)
        </div>
    </div>
</div>

