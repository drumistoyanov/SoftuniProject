@model GroceryStore.Common.ViewModels.PagesViewModel

<ul class="nav nav-pills">
    @if (Model.CurrentPage != 1)
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@(Model.CurrentPage-1)">
                <i class="fas fa-angle-left"></i>
            </a>
        </li>
    }
    @if (Model.CurrentPage == 1)
    {
        <li class="nav-item">
            <a class="nav-link active" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="1">
                1
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="1">
                1
            </a>
        </li>
    }
    @if (Model.CurrentPage < 3)
    {
        if (Model.CurrentPage < Model.MaxPage)
        {
            if (Model.CurrentPage == 2)
            {
                <li class="nav-item">
                    <a class="nav-link active" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="2">
                        2
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="2">
                        2
                    </a>
                </li>
            }
        }
    }
    else
    {
        if (Model.CurrentPage - 1 != 1)
        {
            if (Model.CurrentPage > 3)
            {
                <li class="nav-item">
                    ...
                </li>
            }
        }
        <li class="nav-item">
            <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@(Model.CurrentPage - 1)">@(Model.CurrentPage - 1)</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@(Model.CurrentPage)">
                @Model.CurrentPage
            </a>
        </li>
        if (Model.CurrentPage + 1 < Model.MaxPage)
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@(Model.CurrentPage + 1)">
                    @(Model.CurrentPage + 1)
                </a>
            </li>
            if (Model.CurrentPage + 2 != Model.MaxPage)
            {
                <li class="nav-item">
                    ...
                </li>
            }
        }

    }

    @if (Model.MaxPage > 2)
    {
        @if (Model.CurrentPage != Model.MaxPage)
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@Model.MaxPage">
                    @Model.MaxPage
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="@Model.AreaName" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-id="@(Model.CurrentPage+1)">
                    <i class="fas fa-angle-right"></i>
                </a>
            </li>
        }
    }


</ul>
