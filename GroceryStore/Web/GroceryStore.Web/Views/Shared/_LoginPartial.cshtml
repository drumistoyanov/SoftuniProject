@using GroceryStore.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" 
          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" 
          method="post" id="logoutForm" class="navbar-collapse collapse text-left">
       
            
        <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="">Hello, @UserManager.GetUserName(User)!</a></li>
          
                <button type="submit" class="btn btn-link nav-link">Logout</button>
            
        
    </form>
}
else
{
    <ul class="navbar-collapse collapse text-left">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link"><i class="fa fa-user"></i>Register   </a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link"><i class="fa fa-user"></i>Login</a></li>
    </ul>
}
