@model ManufacturerBindingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create Manufacturer</h2>
<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.FormGroupFor(model => model.Name)
    @Html.FormGroupFor(model => model.LogoUrl)
    <div class="form-group">
        <div class="col-sm-10 col-sm-push2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-default"
               asp-area="Admin" asp-controller="Manufacturers" asp-action="Index">
                Back
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

