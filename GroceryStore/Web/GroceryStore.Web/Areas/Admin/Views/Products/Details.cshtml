@model GroceryStore.Common.ViewModels.Admin.Products.ProductDetailsViewModel
@{
    ViewData["Title"] = "Details";
    var newPrice = Math.Round(Model.Price - ((Model.Price * Model.Discount) / 100),2);
}

<main>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">

                <h2 class="display-3">@Model.Name</h2>
                <br />
                <div>
                    <img src="@Model.PictureUrl" alt="@Model.Name" width="350" height="350" />
                </div>
                <br />
                <br />
                <p><strong>Type</strong> - @Model.Type</p>
                <p><strong>Type</strong> - @Model.Type</p>
                <p><strong>For</strong> - @Model.Kind</p>
                @if (Model.Discount > 0)
                {
                    <p class="card-text"><strong>Price</strong> - @newPrice &euro; <strike>@Model.Price &euro;</strike></p>
                }
                else
                {
                    <p class="card-text"><strong>Price</strong> - @Model.Price &euro;</p>
                }
                <p><strong>Discount</strong> - @Model.Discount %</p>
                <p><strong>Manufacturer Name</strong> - @Model.Manufacturer.Name</p>
                <p><strong>Manufacturer Logo</strong> - <img src="@Model.Manufacturer.LogoUrl" alt="@Model.Manufacturer.Name" width="100" height="100" /></p>
                <br />
                <br />
                <a class="btn btn-success"
                   asp-area="Admin" asp-controller="Images" asp-action="Create" asp-route-id="@Model.Id">
                    <i class="fa fa-plus"></i>Create image for this product
                </a>
                <br />
                <br />
            </div>
            @Html.DisplayForModel()
            <br />
            <br />
            <div class="col-12 text-center">
                <a class="btn btn-warning"
                   asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">
                    Edit
                </a>
                <a class="btn btn-danger"
                   asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">
                    Delete
                </a>
            </div>
        </div>
    </div>
    <a class="btn btn-default"
       asp-area="Admin" asp-controller="Products" asp-action="Index">
        Back
    </a>
</main>
